/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 50rpx auto;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 50rpx;
  color: rgb(50,50,50);
}

.content{
  /* height: 750rpx; */
  padding-top: 10rpx;
  margin: 60rpx 50rpx 50rpx;
  background-color: rgb(255,250,244);
  box-shadow: 0px 0px 10px rgb(101,101,101);
  overflow: hidden;

}
.usetime{
  padding: 10rpx 20rpx 10rpx;
  margin: 30rpx 30rpx 30rpx;
  color: whitesmoke;
  background-color: #c14747;
  box-shadow: 0px 0px 10px rgb(101,101,101);
  overflow: hidden;
}
.coin{
  height: 80rpx;
  width: 80rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  /*box-shadow: 0px 0px 10px rgb(101,101,101);*/
  border-radius: 100rpx;
}
.view_coin{
  display:flex;            
  justify-content: center;  
  align-items: center;
  overflow: hidden;
}
